---
const { image = "/src/assets/insight-hunter-ai-hero.png" } = Astro.props;
---
<style>
.hero img {
  width: 260px;
  filter: drop-shadow(0 0 20px var(--neon-cyan));
  animation: pulse 4s ease-in-out infinite;
}
<section class="hero">
  <img src={image} alt="Insight Hunter AI Robot" />
  <div class="hero-text">
    <h1>Insight Hunter</h1>
    <p>
      Ask your numbers anything. Get instant answers, forecasts, and insights
      with natural language queries â€” no dashboards required.
    </p>
  </div>
</section>

@keyframes pulse {
  0% { filter: drop-shadow(0 0 10px var(--neon-cyan)); }
  50% { filter: drop-shadow(0 0 30px var(--neon-purple)); }
  100% { filter: drop-shadow(0 0 10px var(--neon-cyan)); }
}
</style>


