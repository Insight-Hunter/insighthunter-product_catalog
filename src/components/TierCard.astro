---
const { title, price, description, features = [], link } = Astro.props;
---

<div class="tier">
  <h3>{title}</h3>
  {price && <p class="price">{price}</p>}
  <p>{description}</p>

  <ul>
    {features.map((f) => <li>{f}</li>)}
  </ul>

  {link && <a href={link} class="cta">Open {title}</a>}
</div>
