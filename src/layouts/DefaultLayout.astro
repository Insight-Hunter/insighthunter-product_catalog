    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style lang="scss" global>
       @use '../styles/global.scss';
    </style>
  </head>
  <body>
    <Nav />
    <slot />
  </body>
</html>
