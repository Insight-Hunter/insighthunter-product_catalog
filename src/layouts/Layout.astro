---
import Nav from '../components/Nav.astro';
interface Props { title: string; }
const { title } = Astro.props;
---
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <style lang="scss" global>
    @import '../styles/global.scss';
  </style>
</head>
<body>
  <Nav />
  <slot />
</body>
<script>
window.SnipcartSettings = {
  publicApiKey: "YOUR_SNIPCART_API_KEY", // Replace with your key
  loadStrategy: "on-user-interaction",
};
(function(){var s=document.createElement("script");s.async=true;s.src="https://cdn.snipcart.com/themes/v3.7.1/default/snipcart.js";document.getElementsByTagName("head")[0].appendChild(s);})();
</script>
<div hidden id="snipcart" data-api-key="YOUR_SNIPCART_API_KEY"></div> <!-- Replace key -->
</html>
