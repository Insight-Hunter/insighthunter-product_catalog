---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import TierCard from '../components/TierCard.astro';
---
<Layout title="Insight Hunter">
  <Hero />
  <section class="pricing container">
    <div class="tiers-grid">
      <TierCard name="Lite" price="Free" description="Zero-friction local insights for solo operators." features="Instant bank connection, runway calculator, PDF exports." ctaText="Open Lite" ctaHref="/lite" />
      <TierCard name="Standard" price="$49/month" description="Forecasts and alerts for growing teams." features="Multi-entity, rolling forecasts, investor dashboards." ctaText="Open Standard" ctaHref="/standard" />
      <TierCard name="Full Enterprise" price="Custom" description="GAAP-aligned autonomous finance platform." features="Role-based teams, audit trails, AI execution." ctaText="Contact for Quote" ctaHref="/full" recommended />
    </div>
  </section>
  <p style="margin-top:60px;">Explore dedicated pages: <a href="/lite">Lite</a> · <a href="/standard">Standard</a> · <a href="/full">Full</a> · <a href="/scout">Scout</a></p>
</Layout>
